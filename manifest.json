{
    "manifest_version": 2,
 
    "name": "Steemfollowers",
    "version": "0.2.0",
    "description": "Stats About Your Followers",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"]
      },
    "page_action": {
        "default_title": "Steemfollowers",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon64.png",
            "128": "images/icon128.png"
          },
        "show_matches": ["https://steemit.com/@*", "https://steempeak.com/@*"],
        "hide_matches": ["https://steemit.com/@*/*", "https://steempeak.com/@*/*"]
    },
    "applications": {
        "gecko": {
          "id": "Steemfollowers@steemfeed.social"
        }
    }
}